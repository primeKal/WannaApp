<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recycleruserimagecomment"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recyclerusernamecomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="love y mama"
        android:textColor="@color/textcolor"
        app:layout_constraintStart_toEndOf="@+id/recycleruserimagecomment"
        app:layout_constraintTop_toTopOf="@+id/recycleruserimagecomment" />

    <TextView
        android:id="@+id/recyclerphonecomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/recycleruserimagecomment"
        app:layout_constraintTop_toBottomOf="@+id/recyclerusernamecomment" />
</androidx.constraintlayout.widget.ConstraintLayout>